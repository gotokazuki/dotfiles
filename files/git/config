[advice]
  statusHints = false
[branch]
  sort = -committerdate
[color]
  branch = auto
  diff = auto
  status = auto
[core]
  excludesfile = ~/.config/git/ignore
  quotepath = false
[delta]
  navigate = true
  side-by-side = true
[diff]
  algorithm = histogram
  colorMoved = default
  renames = true
  tool = vimdiff
[difftool "vimdiff"]
  cmd = nvim -d "$LOCAL" "$REMOTE"
  prompt = false
[fetch]
  prune = true
  pruneTags = true
[gc]
  auto = 256
[interactive]
  diffFilter = delta --color-only
[init]
  defaultBranch = main
[log]
  date = iso
[merge]
  conflictStyle = zdiff3
  ff = only
  stat = true
  tool = vimdiff
[mergetool "vimdiff"]
  cmd = nvim -d "$LOCAL" "$BASE" "$REMOTE" "$MERGED"
  keepBackup = false
  prompt = false
[pager]
  blame = delta
  diff = delta
  log = delta
  reflog = delta
  show = delta
[push]
  autoSetupRemote = true
  default = simple
[pull]
  ff = only
  rebase = false
[rebase]
  autoStash = true
[status]
  submoduleSummary = true
[includeIf "gitdir:~/ghq/github.com/"]
  path = ~/.config/git/.gitconfig.github
